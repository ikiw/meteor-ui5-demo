<mvc:View controllerName="demoapp.controller.App"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m">
    <Shell>
        <App>
            <pages>
                <Page title="meteor-ui5 Demo App">
                    <content>
                        <l:Splitter id="mainSplitter"
                            height="100%"
                            width="100%"
                            orientation="Vertical">
                            <core:Fragment fragmentName="demoapp.view.PeopleTable"
                                type="XML">
                            </core:Fragment>
                            <core:Fragment fragmentName="demoapp.view.NewPersonForm"
                                type="XML">
                            </core:Fragment>
                        </l:Splitter>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
