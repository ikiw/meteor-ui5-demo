<mvc:View controllerName="x.controller.App" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
    <Table id="idPeopleMeteorTable" inset="true" items="{
        			path: 'people>/',
        			sorter: {
        				path: 'Name'
        			}
        		}">
        <headerToolbar>
            <Toolbar>
                <Title level="H2" text="People (MeteorModel)"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column width="12em">
                <Text text="Name"/>
            </Column>
            <Column demandPopin="true" minScreenWidth="Tablet">
                <Text text="City"/>
            </Column>
            <Column demandPopin="true" hAlign="Right" minScreenWidth="Tablet">
                <Text text="Age"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{people>name}"/>
                    <Text text="{people>city}"/>
                    <Text text="{people>age}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>


</mvc:View>
